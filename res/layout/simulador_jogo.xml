<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/simulador_lista_relativa"
	android:padding="10px"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" >	
	
	<TextView 
		android:id="@+id/simulador_mandante_time" 
		android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="10px"
	/>
		
	<EditText 
		android:id="@+id/simulador_mandante_placar" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="10px"
	/>

	<TextView 
		android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="10px"
        android:text=" x "
	/>

	<EditText 
		android:id="@+id/simulador_visitante_placar" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="10px"
	/>

	<TextView 
		android:id="@+id/simulador_visitante_time" 
		android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="10px"
	/>

</LinearLayout>
